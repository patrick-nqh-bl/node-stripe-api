<section class="py-2">
  <div class="row">
    <div class="col-md-6 text-center">
      <h1 class="display-3 mt-3 pt-5">
        Code With A Cup Of Cafe
      </h1>
      <p class="lead">enjoy and relax</p>
      <form action="/charge" method="POST">
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="{{stripePublishableKey}}"
          data-amount="2500" data-name="Code With A Cup Of Cafe" data-description="Make by Patrick"
          data-image="/img/patrick.jpg" data-locale="auto">
          </script>
        <script>
          // Hide default stripe button
          document.getElementsByClassName('stripe-button-el')[0].style.display = 'none';
        </script>
        <button type="submit" class="btn btn-outline-dark text-white btn-lg">Purchase For $25</button>
      </form>
    </div>
    <div class="col-md-6">
      <img src="/img/cafe.jpg" alt="image" class="img-fluid mt-5 py-auto">
    </div>
  </div>
</section>